{
  "version": 2,
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.3"
    }
  },
  "routes": [

    { "src": "/test_debug.php", "dest": "/api/test_debug.php" },


 
    { "src": "/(?<filename>[^/]+\\.php)$", "dest": "/api/$filename" },
    
   
    { "src": "/(.*)", "dest": "/api/index.php" } 
  ],
  "build": {
    "env": {
      "NOW_PHP_DEBUG": "1" 
    }
  }
}